#include <stdio.h>

int main() {
    int n;
    printf("Enter the number of students: ");
    scanf("%d", &n);

    float grades[n];
    char letters[n];

    for(int i = 0; i < n; i++) {
        printf("Enter grade for student %d: ", i + 1);
        scanf("%f", &grades[i]);
    }

    float sum = 0;
    float max = grades[0];
    float min = grades[0];


    for(int i = 0; i < n; i++) {
        sum += grades[i];

        if(grades[i] > max) max = grades[i];
        if(grades[i] < min) min = grades[i];

        if(grades[i] >= 90) letters[i] = 'A';
        else if(grades[i] >= 80) letters[i] = 'B';
        else if(grades[i] >= 70) letters[i] = 'C';
        else if(grades[i] >= 60) letters[i] = 'D';
        else letters[i] = 'F';
    }

    float average = sum / n;


    printf("\nStudent Grades:\n");
    printf("Student\tGrade\tLetter\n");
    for(int i = 0; i < n; i++) {
        printf("%d\t%.2f\t%c\n", i + 1, grades[i], letters[i]);
    }

    printf("\nClass Average: %.2f\n", average);
    printf("Highest Grade: %.2f\n", max);
    printf("Lowest Grade: %.2f\n", min);

    return 0;
}
